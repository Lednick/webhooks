#!/usr/bin/env bash
set -xe

source /app/etc/docker/php/bin/fix_permissions
sleep 5
main

SSH_USER=$(getname)
SSH_FOLDER="/home/${SSH_USER}/.ssh"

mkdir -p  ${SSH_FOLDER}
cp /app/etc/docker/php/ssh/* ${SSH_FOLDER}/
chmod 400 ${SSH_FOLDER}/id_rsa
chown ${SSH_USER}:${SSH_USER} ${SSH_FOLDER} -R


#runAsUser "composer install -o -vvv -n"

#runAsUser "/app/bin/ppm config --host=0.0.0.0 --port=8080 --max-requests=500 --app-env=dev --workers=1"

/usr/bin/supervisord -c /etc/supervisor/supervisord.conf
